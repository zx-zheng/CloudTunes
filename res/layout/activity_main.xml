<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/jp.zx.zheng.musictest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicTest" >

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
    	android:id="@+id/sliding_layout"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:gravity="bottom"
    	app:collapsedHeight="68dp"
    	app:shadowHeight="4dp"
    	app:dragView="@+id/trackLabels">
    	
        <LinearLayout
    	    android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:orientation="vertical">
           
            <LinearLayout
                android:id="@+id/library"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:background="#eee"
            	android:orientation="vertical">
            	<com.astuetz.PagerSlidingTabStrip
	    			android:id="@+id/tabs"
    				android:layout_width="match_parent"
    				android:layout_height="48dip" />
        		<android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
	    			android:id="@+id/pager"
    				android:layout_width="match_parent"
	    			android:layout_height="match_parent"
	  	   			android:clickable="true"
           			android:focusable="false"
           			android:focusableInTouchMode="true"/>
        		</LinearLayout>
        </LinearLayout>
       
    	<LinearLayout
    	    android:id="@+id/slideView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:orientation="vertical">
    	    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal">
        		
                <FrameLayout 
                    android:id="@+id/smallAlbumArt"
            		android:layout_width="68dp"
            		android:layout_height="match_parent">
                    <ImageView 
                        android:id="@+id/smallAlbumArtImage"
		    			android:scaleType="fitCenter"
		    			android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:src="@null"/>
                    <TextView 
                        android:id="@+id/smallalbumArtText"
                        android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:text="\u266A"
		    			android:textSize="100dp"
		    			android:gravity="center"/>
                    <ProgressBar
                        android:id="@+id/progressBar"
         				android:layout_width="match_parent"
				        android:layout_height="match_parent"
         				style="@android:style/Widget.ProgressBar.Large"
         				android:gravity="center"/>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/trackLabels"
            		android:layout_width="0dp"
            		android:layout_height="match_parent"
            		android:layout_weight="1"
            		android:background="#eee"
            		android:orientation="vertical"
            		>
                	<TextView
	                    android:id="@+id/trackTitleLabel"
                    	android:layout_width="match_parent"
                    	android:layout_height="0dp"
                    	android:layout_weight="1"
                    	android:gravity="center_vertical"
                    	android:scrollHorizontally="true"
        				android:singleLine="true"
        				android:ellipsize="marquee"
        				android:marqueeRepeatLimit="marquee_forever"
                    	android:paddingLeft="10dp"/>

	                <TextView
    	                android:id="@+id/artistLabel"
        	            android:layout_width="match_parent"
            	        android:layout_height="0dp"
                	    android:layout_weight="1"
	                    android:gravity="center_vertical"
	                    android:scrollHorizontally="true"
        				android:singleLine="true"
        				android:ellipsize="marquee"
        				android:marqueeRepeatLimit="marquee_forever"
    	                android:paddingLeft="10dp"/>
				</LinearLayout>
				
				
				<ToggleButton
	    		    android:id="@+id/playButtun"
    			    android:layout_width="wrap_content"
    			    android:layout_height="match_parent"
    			   	android:textSize="100dp"
    	            android:paddingRight="10dp"
        	        android:paddingLeft="10dp"
       			    android:gravity="center"
       			    android:background="@null"
       			    android:textOff="\u2016"  
  					android:textOn="\u25B6"/>

            </LinearLayout>
            <FrameLayout 
                    android:id="@+id/AlbumArtView"
            		android:layout_width="68dp"
            		android:layout_height="match_parent"
            		android:background="#d6d6d6">
					<ImageView
			    		android:id="@+id/albumArtImage"
			    		android:scaleType="fitCenter"
		    			android:layout_width="match_parent"
		    			android:layout_height="match_parent"		    			
		    			android:src="@null" />
					<TextView 
                        android:id="@+id/albumArtText"
                        android:layout_width="match_parent"
		    			android:layout_height="match_parent"
		    			android:text="\u266A"
		    			android:textSize="300dp"
		    			android:gravity="center"/>
            </FrameLayout>
			
			<SeekBar
		    android:id="@+id/musicSeekBar"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
		    android:progress="0"
   			android:max="100"/>
			
			<LinearLayout
			    android:id="@+id/controler"
            	android:layout_width="match_parent"
            	android:layout_height="68dp"
           		android:background="#eee"
           		android:orientation="horizontal"
           		android:gravity="center">
				<Button
                	android:id="@+id/repeatButton"
                	android:text="\u1F501" 
                	android:layout_width="80dp"
    				android:layout_height="match_parent"
    				android:textSize="80dp"
    				android:background="@null"
    				android:gravity="center"/>
				<Button
                	android:id="@+id/prevButton"
                	android:text="\u23EA" 
                	android:layout_width="68dp"
    				android:layout_height="match_parent"
    				android:textSize="80dp"
    				android:background="@null"
    				android:gravity="center"/>
				<ToggleButton
                	android:id="@+id/playButton1"
                	android:text="" 
                	android:layout_width="68dp"
    				android:layout_height="match_parent"
    				android:textSize="100dp"
    				android:background="@null"
    				android:textOff="\u2016"  
  					android:textOn="\u25B6" 
  					android:gravity="center"/>
				<Button
                	android:id="@+id/nextButton"
                	android:text="\u23E9" 
                	android:layout_width="68dp"
    				android:layout_height="match_parent"
    				android:textSize="80dp"
    				android:background="@null"
    				android:gravity="center"/>
				<Button
                	android:id="@+id/shuffleButton"
                	android:text="\u1F500" 
                	android:layout_width="80dp"
    				android:layout_height="match_parent"
    				android:textSize="80dp"
    				android:background="@null"
    				android:gravity="center"/>
       		</LinearLayout>
			
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>